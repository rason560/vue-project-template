@import './mixin'
/* ==========================================================================
   全局通用 national
   ========================================================================== */

*, * before, * after
  box-sizing border-box
  
html, body
  height 100%
  overflow-x hidden

html
  font-family PingFang SC, STHeitiSC-Light, -apple-system-font, Helvetica Neue, Helvetica, sans-serif
  font-size 14px
  color #323233
  word-spacing 1px
  letter-spacing 0.01rem
  box-sizing border-box
  -ms-text-size-adjust 100%
  -webkit-text-size-adjust 100%
  -moz-osx-font-smoothing grayscale
  -webkit-font-smoothing antialiased
  -webkit-user-select none
  
body
  background #f5f5f5
  
#app
  height 100%
  
.viewbox
  position relative
  top 0
  left 0
  right 0
  bottom 0
  height 100%
  
.container
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  overflow-x hidden
  overflow-y scroll
  -webkit-overflow-scrolling touch
  will-change scroll-position
  &.navbar-fixed
    padding-top 46px

.navbar-fixed
  .van-nav-bar
    position absolute
    top 0
    width 100%
    z-index 9999
  .van-popup--top
    top 46px

.bottom-tabbar .container
  padding-bottom 70px
  